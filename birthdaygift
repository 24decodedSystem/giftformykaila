<script>
// Play bubble sound on button clicks
const bubble = document.getElementById('bubbleSound');
function playBubble(){
    bubble.currentTime = 0;
    bubble.play();
}
// Attach to all buttons
document.addEventListener('click', e => {
    if(e.target.tagName === 'BUTTON' || e.target.classList.contains('btn')){
        playBubble();
    }
});

function startLoading() {
    let nama = document.getElementById("username").value.trim();
    if (nama === "") {
        alert("Please enter your name.");
        return;
    }
    document.getElementById("pageLogin").classList.add("hidden");
    document.getElementById("pageLoading").classList.remove("hidden");

    setTimeout(() => {
        document.getElementById("pageLoading").classList.add("hidden");
        document.getElementById("pageWelcome").classList.remove("hidden");
    }, 1800);
}

function goGift() {
    document.getElementById("pageWelcome").classList.add("hidden");
    document.getElementById("pageGift").classList.remove("hidden");
}

document.getElementById("giftBox").onclick = function () {
    document.getElementById("pageGift").classList.add("hidden");
    document.getElementById("pagePhotos").classList.remove("hidden");

    const audio = document.getElementById("song");
    audio.volume = 0;
    audio.play().catch(()=>{});

    let fade = setInterval(() => {
        if (audio.volume < 1) audio.volume += 0.05;
        else clearInterval(fade);
    }, 100);

    setTimeout(()=> showPhoto("p1"), 400);
    setTimeout(()=> showPhoto("p2"), 1200);
    setTimeout(()=> showPhoto("p3"), 2000);
    setTimeout(()=> showPhoto("p4"), 2800);

    setTimeout(()=>{
        const l = document.getElementById("letter");
        l.style.opacity = 1;
        l.style.transform = "translateY(0)";
        l.style.animation = "paintWipe 1.8s ease forwards";
    }, 4000);
};

function showPhoto(id){
    const p = document.getElementById(id);
    p.style.opacity = 1;
    p.style.transform = "translateY(0)";
}
</script>

    <!-- Bubble Click Sound -->
    <audio id="bubbleSound" src="bubble.mp3"></audio>

